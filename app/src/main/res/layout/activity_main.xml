<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type your message!" />

            <Button
                android:id="@+id/btnSendMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Send Msg To Second Activity" />

            <Button
                android:id="@+id/btnRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recycler View" />

            <Button
                android:id="@+id/btnNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notification Demo" />

            <Button
                android:id="@+id/btnFCMNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FCM Demo" />

            <Button
                android:id="@+id/btnCoroutineWithMitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CoroutineWithMitch" />

            <Button
                android:id="@+id/btnCoroutine2WithMitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Coroutine2WithMitch" />

            <Button
                android:id="@+id/btnCoroutineAppDevNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CoroutineWithAppDevNotes" />

            <Button
                android:id="@+id/btnCoroutineAsyncAwaitAppDevNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CoroutineAsyncAwait WithAppDevNotes" />

            <Button
                android:id="@+id/btnCoroutineJobAppDevNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CoroutineJob WithAppDevNotes" />

            <Button
                android:id="@+id/btnStructuredConcurancy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="StructuredConcurancy WithAppDevNotes" />

            <Button
                android:id="@+id/btnviewModelScope"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ViewModelScope WithAppDevNotes" />



        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>